@model IEnumerable<CarRentalApp.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<h1>Available Cars</h1>

<table class="table">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Price per day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.PricePerDay</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a asp-controller="Reservations" asp-action="Create" asp-route-carId="@car.Id" class="btn btn-success">Reserve</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Car</a>
